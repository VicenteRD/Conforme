<%= form_for @planning,
             as: :planning,
             url: edit_planning_path(@planning),
             method: :patch do |f| %>

    <section class="page-content">
      <div class="page-content-inner">

        <div class="panel">
          <%= render partial: 'referables/references_nav' %>

          <div class="row form-group margin-left-50">
            <div class="col-lg-1">
              <label class="form-control-label">
                Nombre
              </label>
            </div>
            <div class="col-lg-2 margin-right-20" id="process-in">
              <%= f.text_field :name, class: 'form-control' %>
            </div>


            <div class="col-lg-1">
              <label class="form-control-label">
                Descripción
              </label>
            </div>
            <div class="col-lg-2 margin-right-20" id="process-in">
              <%= f.text_field :description, class: 'form-control' %>
            </div>

            <div class="col-lg-1">
              <label class="form-control-label">
                Fecha Planificada
              </label>
            </div>
            <div class="col-lg-2">
              <div class='input-group date date-picker' id='date-picker'>
                <%= text_field :raw, :due_at, class: 'form-control',
                               data: {format: dt_form_format(true), max: 0},
                               value: @planning.due_at.to_i %>
                <span class="input-group-addon">
                  <i class="icmn-calendar"></i>
                </span>
              </div>
            </div>
          </div>

          <div class="row form-group margin-left-50">
            <div class="col-lg-1">
              <label class="form-control-label">
                Ejecutado?
              </label>
            </div>
            <div class="col-lg-2 text-left margin-right-20">
              <%= check_box :raw, :executed, class: 'vertical-align-middle' %>
            </div>

            <div class="col-lg-1">
              <label class="form-control-label">
                Fecha Real
              </label>
            </div>
            <div class="col-lg-2">
              <div class='input-group date date-picker' id='date-picker'>
                <%= text_field :raw, :executed_at, class: 'form-control',
                               data: {format: dt_form_format(true), max: 0},
                               value: DateTime.now.to_i,
                               readonly: true %>
                <span class="input-group-addon">
                  <i class="icmn-calendar"></i>
                </span>
              </div>
            </div>
          </div>

          <div class="row form-group" style="margin: 30px 10px;height:400px">
            <%= f.text_area :comments, class: 'form-control', data: {provider: 'summernote'} %>
          </div>

          <div id="references-container"></div>

        </div>
      </div>
    </section>

    <!-- Confirmation modal -->
    <div id="confirmation-modal" class="modal fade modal-size-large" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content" id="confirmation-modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title" id="confirmation-modal-title">Está Seguro?</h4>
          </div>

          <div class="modal-body" id="confirmation-modal-body">
            <%= text_area :log, :body, class: 'form-control height-150' %>
          </div>

          <div class="modal-footer">
            <div class="row">
              <div class="col-md-6 text-left">
                <button class="btn btn-danger width-150 height-50" data-dismiss="modal">Cancelar</button>
              </div>
              <div class="text-right col-md-6">
                <%= f.submit 'Ingresar', class: 'btn btn-primary width-150 height-50' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

<% end %>

<%= content_for :breadcrumbs do %>
    <div class="left">
      <ul class="list-unstyled breadcrumb breadcrumb-custom">
        <li>
          <%= link_to plannings_path do %>
              Planificación
          <% end %>
        </li>
        <li>
          <%= link_to @planning.number, planning_path(@planning) %>
        </li>
        <li>
          <span>
            Editar Plan
          </span>
        </li>
      </ul>
    </div>
<% end %>

<%= content_for :scripts do %>
    <script>
        $('#raw_executed').click(function () {
            var execAt = $('#raw_executed_at');
            if ($(this).is(':checked')) {
                execAt.removeAttr('readonly');
            } else {
                execAt.prop('readonly', 'readonly')
            }
        });
    </script>
<% end %>

