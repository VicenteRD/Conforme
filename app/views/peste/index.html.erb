<% content_for :before_table do %>
<% end %>

<% content_for :table_name_active do %>
    Activos
<% end %>

<% content_for :table_headers do %>
    <tr>
      <th>Tipo</th>
      <th>Nombre</th>
      <th>Estrategia</th>
      <th>Responsable</th>
      <th>Revisado</th>
    </tr>
<% end %>
<% content_for :table_body do %>
    <% all_peste= Peste.order_by(peste_type: :asc) %>
    <% if all_peste.size != 0 %>
        <% all_peste.each do |peste| %>

            <tr data-href="<%= peste_path(peste) %>">

              <td data-sort="<%= peste.peste_type %>">
                <div class="expand-collapse">+</div>
                <%= peste.presentable_type %>
              </td>
              <td>
                <%= peste.name %>
              </td>
              <td>
                <%= peste.strategy %>
              </td>
              <td>
                <%= print_responsible(peste.responsible_id) %>
              </td>
              <td>
                <%= peste.last_revision_at(dt_rb_format(false, false)) || '-' %>
              </td>
            </tr>
        <% end %>
    <% else %>
        <tr>
          <td colspan="4"> No se encontraron elementos PESTA.</td>
        </tr>
    <% end %>
<% end %>

<% content_for :menu do %>
    <div class="dropdown">
      <%= link_to new_peste_path, method: 'get', class: 'dropdown-inline-button' do %>
          <i class="dropdown-inline-button-icon icmn-file-plus"></i>
          Nuevo
      <% end %>
    </div>
<% end %>

<% content_for :breadcrumbs do %>
    <div class="left">
      <ul class="list-unstyled breadcrumb breadcrumb-custom">
        <li>
        <span>
          Estrategias: PESTA
        </span>
        </li>
      </ul>
    </div>
<% end %>
