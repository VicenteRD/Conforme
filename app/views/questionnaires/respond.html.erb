<%= form_for :response, url: respond_questionnaire_path(@questionnaire) do |f| %>
    <section class="page-content">
      <div class="page-content-inner">

        <div class="panel" style="padding: 30px 20px">
          <h4><%= @questionnaire.name %></h4>
          <%= show_formatted_datetime(@questionnaire.due_at) %>
        </div>

        <% if @questionnaire.questions? %>
            <% @questionnaire.questions.each do |question| %>
                <div class="panel" style="padding: 30px 20px">
                  <h6><%= question.name %></h6>
                  <% if question.question_type == 1 && question.alternatives? %>
                      <table>
                        <tbody>
                        <% question.alternatives.each_with_index do |(alternative, correct), idx| %>
                            <tr>
                              <td><%= f.radio_button "alternatives_#{question.id}", idx %></td>
                              <td style="padding: 5px"><%= alternative %></td>
                            </tr>
                        <% end %>
                        </tbody>
                      </table>
                  <% else %>
                      <%= f.text_area :response, class: 'form-control', style: 'max-height: 300px' %>
                  <% end %>
                </div>
            <% end %>
        <% end %>
      </div>
    </section>

    <!-- Confirmation modal -->
    <div id="confirmation-modal" class="modal fade modal-size-large" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content" id="confirmation-modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title" id="confirmation-modal-title">Est√° Seguro?</h4>
          </div>

          <div class="modal-body" id="confirmation-modal-body">
            <%= text_area :log, :body, class: 'form-control height-150' %>
          </div>

          <div class="modal-footer">
            <div class="row">
              <div class="col-md-6 text-left">
                <button class="btn btn-danger width-150 height-50" data-dismiss="modal">Cancelar</button>
              </div>
              <div class="text-right col-md-6">
                <%= f.submit 'Ingresar', class: 'btn btn-primary width-150 height-50' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

<% end %>

<% content_for :breadcrumbs do %>
    <div class="left">
      <ul class="list-unstyled breadcrumb breadcrumb-custom">
        <li>
          <%= link_to 'Documentos: Cuestionarios', questionnaires_path %>
        </li>
        <li>
          <%= link_to @questionnaire.number, @questionnaire %>
        </li>
        <li>
          <span>
            Responder
          </span>
        </li>
      </ul>
    </div>
<% end %>