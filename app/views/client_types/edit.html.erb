<%= form_for(@type, as: :type,
             url: edit_client_type_path(@type), method: :patch) do |f| %>

    <section class="page-content">
      <div class="page-content-inner">

        <div class="panel">
          <%= render partial: 'referables/references_nav' %>

          <div class="row form-group margin-left-30 margin-right-20">
            <div class="col-lg-1">
              <label class="form-control-label">
                Nombre
              </label>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="col-lg-1">
              <label class="form-control-label">
                Descripción
              </label>
            </div>
            <div class="col-lg-7">
              <%= f.text_field :description, class: 'form-control' %>
            </div>
          </div>

          <div class="row margin-30">
            <div class="col-lg-2" style="text-align: center; vertical-align: middle">
              <h5 class="margin-0">
                <a href="javascript:openClientsModal()">
                  Clientes:
                </a>
              </h5>
            </div>
            <div class="col-lg-6" id="clients-in"></div>
          </div>

          <div class="row form-group" style="margin: 30px 10px;height:400px">
            <%= f.text_area :comments, class: 'form-control', data: {provider: 'summernote'} %>
          </div>

          <div style="margin: 0 30px 10px 30px">
            <%= render partial: 'referables/show_all_for',
                       locals: {element: @type, form_format: true} %>
          </div>

        </div>
      </div>
    </section>

    <!-- Confirmation modal -->
    <div id="confirmation-modal" class="modal fade modal-size-large" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content" id="confirmation-modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title" id="confirmation-modal-title">Está Seguro?</h4>
          </div>

          <div class="modal-body" id="confirmation-modal-body">
            <%= text_area :log, :body, class: 'form-control height-150' %>
          </div>

          <div class="modal-footer">
            <div class="row">
              <div class="col-md-6 text-left">
                <button class="btn btn-danger width-150 height-50" data-dismiss="modal">Cancelar</button>
              </div>
              <div class="text-right col-md-6">
                <%= f.submit 'Ingresar', class: 'btn btn-primary width-150 height-50' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

<% end %>

<%= content_for :scripts do %>
    <script>
        function clientsElementGenerator(target, klass, id, name) {
            target.append(
                '<div id="reference-' + id + '" style="display:inline">\n' +

                '<input class="form-control-hidden" type="hidden" ' +
                'name="type[client_ids][]" id="type_client_ids" ' +
                'value="' + id + '">\n' + (target.is(':empty') ? '' : ', ') + name +
                '</div>'
            );
        }
        function openClientsModal() {
            setOptions('Person::Client', 'Clientes', true, 'clients', $('#clients-in'));
            setElementGenerator(clientsElementGenerator);

            renderAndShowReferencesModal();
        }

        $(document).ready(function() {
            // Load lists
            setList('clients', <%= raw(@type.client_ids.map { |id| id.to_s }.to_s) %>, null);

            // Show all
            <% @type.clients.each do |client| %>
            clientsElementGenerator($('#clients-in'), 'providers',
                '<%= client.id.to_s %>', '<%= client.full_name %>');
            <% end %>
        });
    </script>
<% end %>

<%= content_for :breadcrumbs do %>
    <div class="left">
      <ul class="list-unstyled breadcrumb breadcrumb-custom">
        <li>
          <%= link_to 'Clientes: Tipos', client_types_path %>
        </li>
        <li>
          <%= link_to @type.number, client_type_path(@type) %>
        </li>
        <li>
          <span>
            Editar
          </span>
        </li>
      </ul>
    </div>
<% end %>
