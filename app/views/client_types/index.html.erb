<% content_for :before_table do %>
<% end %>

<% content_for :table_name_active do %>
    Activos
<% end %>

<% content_for :table_headers do %>
    <tr>
      <th>Nombre</th>
      <th>Descripci√≥n</th>
    </tr>
<% end %>

<% content_for :table_body do %>
    <% client_types = ClientType.all %>

    <% if client_types.size != 0 %>
        <% client_types.each do |type| %>
            <tr data-href="<%= client_type_path(type) %>">
              <td>
                <%= type.name %>
              </td>
              <td>
                <%= type.description %>
              </td>
            </tr>
        <% end %>
    <% else %>
        <tr>
          <td colspan="2"> No se encontraron tipos de clientes.</td>
        </tr>
    <% end %>
<% end %>


<% content_for :menu do %>
    <div class="dropdown">
      <%= link_to new_client_type_path, class: 'dropdown-inline-button' do %>
          <i class="dropdown-inline-button-icon icmn-file-plus"></i>
          Nuevo
      <% end %>
    </div>
<% end %>

<% content_for :breadcrumbs do %>
    <div class="left">
      <ul class="list-unstyled breadcrumb breadcrumb-custom">
        <li>
        <span>
          Clientes: Tipos
        </span>
        </li>
      </ul>
    </div>
<% end %>
