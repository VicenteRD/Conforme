<section class="page-content">
  <div class="page-content-inner">
    <div class="panel" style="padding: 0px 15px">
      <%= render partial: 'chart' %>
    </div>
  </div>
</section>

<% content_for :scripts do %>
    <script>
        $('div.node').click(function () {
            var positionId = $(this).find('p').attr('data-id');

            window.open('/personas/organigrama/' + positionId, '_self')
        });
    </script>
<% end %>

<% content_for :styles, raw(position_selector_style) %>

<% content_for :menu do %>
    <div class="dropdown">
      <%= link_to new_position_path, method: 'get', class: 'dropdown-inline-button' do %>
          <i class="dropdown-inline-button-icon icmn-file-plus"></i>
          Nueva
      <% end %>
    </div>
<% end %>

<% content_for :breadcrumbs do %>
    <div class="left">
      <ul class="list-unstyled breadcrumb breadcrumb-custom">
        <li>
        <span>
          Personas: Organigrama
        </span>
        </li>
      </ul>
    </div>
<% end %>