<%# Cheeky fix %>
<% presentable_type = @type.capitalize.sub('o', 'ó') %>

<%= form_for @business_asset,
             as: :business_asset,
             url: edit_business_asset_path(@type, @business_asset.id),
             method: :patch do |f| %>

    <section class="page-content">
      <div class="page-content-inner">

        <div class="panel">
          <%= render partial: 'referables/references_nav' %>

          <div class="row form-group margin-left-50">
            <div class="col-lg-1">
              <label class="form-control-label">
                Tipo
              </label>
            </div>
            <div class="col-lg-2 input-group margin-right-20" id="type-in">
              <%= text_field :extra, :type_name, class: 'form-control', readonly: true,
                             value: BusinessAssetType.find(@business_asset.type_id).name %>
              <span class="input-group-addon" style="cursor: pointer">
                <i class="icmn-pencil5"></i>
              </span>
              <%= f.hidden_field :type_id, class: 'form-control-hidden' %>
            </div>

            <div class="col-lg-1">
              <label class="form-control-label">
                Responsable
              </label>
            </div>
            <div class="col-lg-2 input-group margin-right-20" id="responsible-in">
              <%= text_field :extra, :responsible_name, class: 'form-control', readonly: true,
                             value: Person::User
                                 .find(@business_asset.responsible_id).first_last_name %>
              <span class="input-group-addon" style="cursor: pointer">
              <i class="icmn-pencil5"></i>
            </span>
              <%= f.hidden_field :responsible_id, class: 'form-control-hidden' %>
            </div>
          </div>

          <div class="row form-group margin-left-50">
            <div class="col-lg-1">
              <label class="form-control-label">
                Identificador
              </label>
            </div>
            <div class="col-lg-2 margin-right-20">
              <%= f.text_field :identification, class: 'form-control' %>
            </div>
            <div class="col-lg-1">
              <label class="form-control-label">
                Nombre
              </label>
            </div>
            <div class="col-lg-2 margin-right-20">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="col-lg-1">
              <label class="form-control-label">
                Descripción
              </label>
            </div>
            <div class="col-lg-2 margin-right-20">
              <%= f.text_field :description, class: 'form-control' %>
            </div>
          </div>

          <div class="row form-group" style="margin: 30px 10px;height:400px">
            <%= f.text_area :comments, class: 'form-control', data: {provider: 'summernote'} %>
          </div>

          <div id="references-container"></div>

        </div>
      </div>
    </section>

    <!-- Confirmation modal -->
    <div id="confirmation-modal" class="modal fade modal-size-large" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content" id="confirmation-modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title" id="confirmation-modal-title">Está Seguro?</h4>
          </div>

          <div class="modal-body" id="confirmation-modal-body">
            <%= text_area :log, :body, class: 'form-control height-150' %>
          </div>

          <div class="modal-footer">
            <div class="row">
              <div class="col-md-6 text-left">
                <button class="btn btn-danger width-150 height-50" data-dismiss="modal">Cancelar</button>
              </div>
              <div class="text-right col-md-6">
                <%= f.submit 'Ingresar', class: 'btn btn-primary width-150 height-50' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>

<% content_for :breadcrumbs do %>
    <div class="left">
      <ul class="list-unstyled breadcrumb breadcrumb-custom">
        <li>
          <%= link_to presentable_type + ' Activos', business_assets_path(@type) %>
        </li>
        <li>
          <%= link_to @business_asset.number, business_asset_path(@type, @business_asset) %>
        </li>
        <li>
          <span>
            Editar
          </span>
        </li>
      </ul>
    </div>
<% end %>

<%= content_for :scripts do %>
    <script>
        $('#responsible-in').click(function () {
            setOptions('Person::User', 'Responsable', false, 'asset_responsible', $(this));
            renderAndShowReferencesModal();
        });

        $('#type-in').click(function () {
            setOptions('BusinessAssetType', 'Tipo', false, 'asset_type', $(this));
            renderAndShowReferencesModal();
        });
    </script>
<% end %>
