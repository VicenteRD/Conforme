<%# Cheeky fix %>
<% presentable_type = @type.capitalize.sub('o', 'ó') %>

<% jobs = @business_asset.get_jobs(@type).order_by(due_at: :desc, c_at: :desc) %>
<% latest_job = jobs.first %>

<%= content_for :main_col_1 do %>
    <div class="row">
      <div class="col-lg-4 show-label">Tipo:</div>
      <div class="col-lg-8">
        <%= BusinessAssetType.find(@business_asset.type_id).name %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 show-label">Descripción:</div>
      <div class="col-lg-8">
        <%= @business_asset.description %>
      </div>
    </div>
<% end %>

<%= content_for :main_col_2 do %>
    <div class="row">
      <div class="col-lg-4 show-label">Nombre:</div>
      <div class="col-lg-8">
        <%= @business_asset.name %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 show-label">Planificada:</div>
      <div class="col-lg-8">
        <%= latest_job ? show_formatted_datetime(latest_job.due_at) : '-' %>
      </div>
    </div>
<% end %>

<%= content_for :main_col_3 do %>
    <div class="row">
      <div class="col-lg-4 show-label">Identificación:</div>
      <div class="col-lg-8">
        <%= @business_asset.identification %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 show-label">Ejecutada:</div>
      <div class="col-lg-8">
        <%= latest_job ? show_formatted_datetime(latest_job.executed_at) : '-'  %>
      </div>
    </div>
<% end %>

<%= content_for :extra do %>
    <% if @business_asset.comments? %>
        <div class="panel">
          <div class="panel-heading">
            <h5>Descripción</h5>
          </div>
          <div class="panel-body">
            <div class="margin-left-30 margin-bottom-30">
              <%= raw @business_asset.comments %>
            </div>
          </div>
        </div>
    <% end %>

    <% if @business_asset.references? %>
        <div class="panel">
          <div class="panel-heading">
            <h5>Referencias</h5>
          </div>
          <div class="margin-left-30 margin-bottom-30">
            <%= render partial: 'referables/show_all_for', locals: {element: @business_asset} %>
          </div>
        </div>
    <% end %>



    <% if @business_asset.jobs? %>
        <div class="panel">
          <div class="panel-heading">
            <h5>Trabajos de <%= presentable_type %></h5>
          </div>
          <div class="panel-body">
            <div class="row margin-left-20 margin-right-20">
              <div class="table-responsive margin-bottom-10" style="height:300px; overflow: auto">
                <table class="table">
                  <thead>
                  <tr>
                    <th>Planificada</th>
                    <% if @type == 'mantencion' %>
                        <th>Motivo</th>
                        <th>Ejecutada</th>
                        <th>Resultado</th>
                    <% else %>
                        <th>Ejecutada</th>
                    <% end %>
                  </tr>
                  </thead>
                  <tbody>
                  <% jobs.each do |job| %>
                      <tr class="job-row" data-id="<%= job.id %>">
                        <td>
                          <%= show_formatted_datetime(job.due_at) %>
                        </td>
                        <% if @type == 'mantencion' %>
                            <td>
                              <%= job.motive %>
                            </td>
                            <td>
                              <%= show_formatted_datetime(job.executed_at) %>
                            </td>
                            <td>
                              <%= job.result %>
                            </td>
                        <% else %>
                            <td>
                              <%= show_formatted_datetime(job.executed_at) %>
                            </td>
                        <% end %>
                      </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
    <% end %>
<% end %>


<%= content_for :menu do %>
    <div class="dropdown">
      <% history_content = "#{escape_javascript(render partial: 'log/modal', locals: {book: @business_asset.log_book})}" %>
      <a href="javascript:void(0)" class="dropdown-inline-button" onclick="showHistory('<%= history_content %>')">
        <i class="dropdown-inline-button-icon icmn-history"></i>
        Bitácora
      </a>
    </div>

    <div class="dropdown">
      <% files_table = "#{escape_javascript(render partial: 'uploaded_files/modal', locals: {attachments: @business_asset.attachment_ids})}" %>
      <a href="javascript:void(0)" class="dropdown-inline-button" onclick="showAttachments('<%= files_table %>')">
        <i class="dropdown-inline-button-icon icmn-folder-open"></i>
        Adjuntos
      </a>
    </div>

    <div class="dropdown">
      <%= link_to new_asset_job_path(@type, @business_asset.id), method: 'get', class: 'dropdown-inline-button' do %>
          <i class="dropdown-inline-button-icon icmn-traffic-cone"></i>
          Programar <%= presentable_type %>
      <% end %>
    </div>

    <div class="dropdown">
      <%= link_to edit_business_asset_path(@type, @business_asset.id), method: 'get', class: 'dropdown-inline-button' do %>
          <i class="dropdown-inline-button-icon icmn-pencil"></i>
          Editar
      <% end %>
    </div>
<% end %>

<% content_for :breadcrumbs do %>
    <div class="left">
      <ul class="list-unstyled breadcrumb breadcrumb-custom">
        <li>
          <%= link_to presentable_type + ' Activos', business_assets_path(@type) %>
        </li>
        <li>
          <span>
            <%= @business_asset.number %>
          </span>
        </li>
      </ul>
    </div>
<% end %>

<% content_for :scripts do %>
    <script type="text/javascript">
        $('.job-row').click(function () {
            var link = '/activos/<%= @type %>/<%= @business_asset.id %>/' + $(this).attr('data-id') + '/editar';

            window.open(link, '_self');
        });
    </script>
<% end %>