<%= form_for(@person, as: :client,
             url: edit_client_path(@person), method: :patch) do |f| %>

    <section class="page-content">
      <div class="page-content-inner">

        <div class="panel">
          <%= render partial: 'referables/references_nav' %>

          <div class="row form-group margin-left-30 margin-right-20">
            <div class="col-lg-1">
              <label class="form-control-label">
                Nombre
              </label>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="col-lg-1">
              <label class="form-control-label">
                A. Paterno
              </label>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :l_name1, class: 'form-control' %>
            </div>
            <div class="col-lg-1">
              <label class="form-control-label">
                A. Materno
              </label>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :l_name2, class: 'form-control' %>
            </div>
          </div>

          <div class="row form-group margin-left-30 margin-right-20">
            <div class="col-lg-1">
              <label class="form-control-label">
                RUT
              </label>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :rut, class: 'form-control' %>
            </div>

            <div class="col-lg-1">
              <label class="form-control-label">
                Teléfono
              </label>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :rut, class: 'form-control' %>
            </div>

            <div class="col-lg-1">
              <label class="form-control-label">
                E-Mail
              </label>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :email, class: 'form-control' %>
            </div>
          </div>

          <div class="row form-group margin-left-30 margin-right-20">
            <div class="col-lg-1">
              <label class="form-control-label">
                Fecha de Nacimiento
              </label>
            </div>
            <div class="col-lg-3 input-group date-picker">
              <%= text_field :raw, :dob, class: 'form-control',
                             data: {format: dt_form_format(true)},
                             value: @person.dob.to_time.to_i %>
              <span class="input-group-addon">
                <i class="icmn-calendar"></i>
              </span>
            </div>

            <div class="col-lg-1">
              <label class="form-control-label">
                Dirección
              </label>
            </div>
            <div class="col-lg-7">
              <%= f.text_field :address, class: 'form-control' %>
            </div>
          </div>

          <div style="margin:50px 50px 0 50px">
            <%= f.file_field :attachments, class: 'dropify', multiple: true,
                             data: {height: '90px', width: '100%'} %>
          </div>

          <div class="row form-group" style="margin: 30px 10px;height:400px">
            <%= f.text_area :comments, class: 'form-control', data: {provider: 'summernote'} %>
          </div>

          <div id="references-container"></div>

        </div>
      </div>
    </section>

    <!-- Confirmation modal -->
    <div id="confirmation-modal" class="modal fade modal-size-large" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content" id="confirmation-modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title" id="confirmation-modal-title">Está Seguro?</h4>
          </div>

          <div class="modal-body" id="confirmation-modal-body">
            <%= text_area :log, :body, class: 'form-control height-150' %>
          </div>

          <div class="modal-footer">
            <div class="row">
              <div class="col-md-6 text-left">
                <button class="btn btn-danger width-150 height-50" data-dismiss="modal">Cancelar</button>
              </div>
              <div class="text-right col-md-6">
                <%= f.submit 'Ingresar', class: 'btn btn-primary width-150 height-50' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

<% end %>

<%= content_for :scripts do %>
    <script>
    </script>
<% end %>

<%= content_for :breadcrumbs do %>
    <div class="left">
      <ul class="list-unstyled breadcrumb breadcrumb-custom">
        <li>
          <%= link_to clients_path do %>
              Clientes: Fichas
          <% end %>
        </li>
        <li>
          <%= link_to @person.rut, client_path(@person) %>
        </li>
        <li>
          <span>
            Editar
          </span>
        </li>
      </ul>
    </div>
<% end %>
