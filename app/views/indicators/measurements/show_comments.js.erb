// Populate the 'comments' modal with the measurement's comments
$('#comments-modal-comments').html('<%= raw @measurement.comments %>');

modalContent = $('#comments-modal-content');

// If there's a footer, get rid of it.
if (modalContent.find('.modal-footer').length > 0) {
    modalContent.find('.modal-footer').remove();
}

modalContent.append('<%= escape_javascript(
render partial: 'risks/show/measurement_comments/modal_footer') %>');

$('#comments-modal').modal();
