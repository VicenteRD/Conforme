<% content_for :page_header do %>
    <h3>Tareas de Documentos</h3>
<% end %>

<% content_for :before_table do %>
<% end %>

<% content_for :table_name_active do %>
    Tareas Activas
<% end %>

<% content_for :table_headers do %>
    <tr>
      <th>NÃºmero</th>
      <th>Documento</th>
      <th>Estado</th>
      <th>Etapa</th>
      <th>Pedido por</th>
      <th>Encargado</th>
      <th>Fecha 1</th>
      <th>Fecha 2</th>
      <th>Transcurrido</th>
    </tr>
<% end %>

<% content_for :table_body do %>
    <% if @tasks.size != 0 %>
        <% @tasks.each do |task| %>
            <tr data-href="<%= task_path(task.id.to_s) %>">

              <td><%= task.number %></td>

              <td><%= task.document_id %></td>

              <td><%= task.status %></td>
              <td><%= task.stage %></td>

              <td><%= Person::User.find(task.petitioner_id).first_last_name %></td>

              <td><%= Person::User.find(task.executor_id).first_last_name %></td>

              <td> <%= task.c_at %></td>
              <td> <%= task.p_at %></td>
              <td> <%= Time.now - task.c_at %> </td>

            </tr>
        <% end %>
    <% else %>
        <tr>
          <td> No se encontraron riesgos de esta clase. </td>
        </tr>
    <% end %>
<% end %>

<% content_for :after_table do %>
<% end %>