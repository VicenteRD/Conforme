<%= content_for :references_table_content do %>
    <thead>
    <tr>
      <th>Tipo</th>
      <th>Nombre</th>
      <th>Descripci칩n</th>
      <th>Expectativa</th>
    </tr>
    </thead>
    <tbody style="cursor: pointer">
    <% ConcernedParty.each do |concerned_party| %>
        <tr class="concerned_party-row" data-id="<%= concerned_party.id %>">
          <td><%= concerned_party.presentable_type %></td>
          <td id="name-cell"><%= concerned_party.name %></td>
          <td><%= concerned_party.description %></td>
          <td><%= concerned_party.expectation %></td>
        </tr>

    <% end %>
    </tbody>
<% end %>

<%= content_for :references_form do %>
    <%= form_for(:concerned_party,
                 url: new_concerned_party_path(format: :json),
                 remote: true,
                 html: {id: 'new_concerned_party'}) do |f| %>
        <div class="row form-group" style="margin: 15px 10px 0 10px">
          <div class="col-md-1">
            <label class="form-control-label">Tipo</label>
          </div>
          <div class="col-md-3">
            <%= f.collection_select :party_type,
                                    ConcernedParty.get_all_types,
                                    :first, :last,
                                    {}, {class: 'form-control', style: 'width: 100%'} %>
          </div>
          <div class="col-md-1">
            <label class="form-control-label">Nombre</label>
          </div>
          <div class="col-md-7">
            <%= f.text_field :name, class: 'form-control', style: 'width: 100%' %>
          </div>
        </div>

        <div class="row form-group" style="margin: 15px 10px 0 10px">
          <div class="col-md-1">
            <label class="form-control-label">Descripci칩n</label>
          </div>
          <div class="col-md-7">
            <%= f.text_field :description, class: 'form-control', style: 'width: 100%' %>
          </div>
        </div>
        <div class="row form-group" style="margin: 15px 10px 0 10px">
          <div class="col-md-1">
            <label class="form-control-label">Expectativa</label>
          </div>
          <div class="col-md-7">
            <%= f.text_field :expectation, class: 'form-control', style: 'width: 100%' %>
          </div>
        </div>

        <%= f.hidden_field :responsible_id, value: @user.id %>
        <!--<div class="row" style="margin: 15px 10px 0 10px">
          <p>
            Usted ser치 asignado como responsable de este elemento.
            <br>
            Puede editar esto accediendo a la p치gina del elemento directamente y haciendo click en <i>Editar</i>.
          </p>
        </div>-->

        <div class="form-actions text-center" style="position:absolute; bottom: 0; width: 100%">
          <%= f.submit 'Ingresar', class: 'btn btn-primary width-150 height-50', style: 'text-align: center' %>
        </div>
    <% end %>
<% end %>

<%= content_for :references_scripts do %>
    <script>
        var rowSelector = $('.concerned_party-row');

        rowSelector.click(function () {
            var row = $(this);
            var result = processReferenceRowClick(
                row,
                row.attr('data-id'),
                row.find('#name-cell').html()
            );

            if (result) {
                $('#table-modal').modal('hide');
            }
        });

        $('#new_concerned_party').on("ajax:success", function (e, data, status, xhr) {
            var result = processNewReferenceCreated(data);

            if (result) {
                $('#table-modal').modal('hide');
            }
        });

        rowSelector.each(function () {
            var row = $(this);
            styleSelection(row, isSelected('ConcernedParty', row.attr('data-id')));
        });

        $('.filterable').filterable();
    </script>
<% end %>
