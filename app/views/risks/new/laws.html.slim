= render partial: 'risks/new/rule_form', locals: {type_label: 'Ley'}

= content_for :scripts do
  javascript:
      #{}
      $('#rule-in').click(function () {
          setOptions('Rule', 'Ley', false, 'risk_law', $(this));
          renderAndShowReferencesModal('law');
      });

      $('#responsible-in').click(function () {
          setOptions('Person::User', 'Responsable', false, 'risk_responsible', $(this));
          renderAndShowReferencesModal();
      });
      #{}


= content_for :breadcrumbs do
  .left
    ul.list-unstyled.breadcrumb.breadcrumb-custom
      li
        = link_to 'Riesgos Legales', risks_path('ley')
      li
        span Nuevo
