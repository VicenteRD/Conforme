<%= form_for(:measurement, url: new_risk_measurement_path(@risk.id)) do |f| %>
  <section class="page-content">
    <div class="page-content-inner">

      <div class="panel">

        <%= render partial: 'associables/associations_nav', locals: {element: 'measurement'} %>

        <%= f.hidden_field :type, value: 'operational' %>

          <div class="row form-group margin-left-50">
            <div class="col-lg-1">
              <label class="form-control-label">
                Fecha de medici칩n
              </label>
            </div>
            <div class="col-lg-2">
              <div class='input-group date' id='date-picker'>
                <%= f.text_field :measured_at, class: 'form-control', data: {date_format: dt_form_format}%>
                <span class="input-group-addon">
                  <i class="icmn-calendar"></i>
                </span>
              </div>
              <script type="text/javascript">
                  $(function () {
                      $('#date-picker').datetimepicker({
                          locale: moment.locale('es'),
                          format: '<%= dt_form_format %>',
                          defaultDate: Date.now(),
                          maxDate: Date.now(),
                          timeZone: '<% server_timezone %>',
                          icons: {
                              time: "fa fa-clock-o",
                              date: "fa fa-calendar",
                              up: "fa fa-arrow-up",
                              down: "fa fa-arrow-down",
                              previous: "fa fa-arrow-left",
                              next: "fa fa-arrow-right"
                          }
                      });
                  });
              </script>
            </div>
            <div class="col-lg-1 text-right">
              <label class="form-control-label">
                Probabilidad
              </label>
            </div>
            <div class="col-lg-1 form-inline">
              <%= f.number_field :probability, value: 0, within: 0..100, class: 'form-control', style: 'width:75px' %> %
            </div>

            <div class="col-lg-1 text-right">
              <label class="form-control-label">
                Impacto
              </label>
            </div>
            <div class="col-lg-1">
              <%= f.collection_select(:impact, Settings::RiskSettings.first.operational_impact_options,
                                      :first, :last, {}, {class: 'form-control'}) %>
            </div>
          </div>

          <div class="row form-group margin-left-50">
            <div class="col-lg-1">
              <label class="form-control-label">Comentarios</label>
            </div>
            <div class="col-lg-3">
              <%= f.text_area :comments, class: 'form-control', style: 'width:100%' %>
            </div>
          </div>

      </div>

      <div id="associations-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">

          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body" id="associations-modal-body">
            </div>
            <!--<div class="modal-footer"></div>-->
          </div>

        </div>
      </div>

    </div>
  </section>

  <!-- Confirmation modal -->
  <div id="confirmation-modal" class="modal fade modal-size-large" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content" id="confirmation-modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title" id="confirmation-modal-title">Est치 Seguro?</h4>
        </div>

        <div class="modal-body" id="confirmation-modal-body">
          <div class="row">
            <div class="col-md-2">
              <label>Entrada Bit치cora</label>
            </div>
            <div class="col-md-9">
              <%= text_area :log, :entry, class: 'form-control height-150' %>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <div class="row">
            <div class="col-md-6 text-left">
              <button class="btn btn-danger width-150 height-50" data-dismiss="modal">Cancelar</button>
            </div>
            <div class="text-right col-md-6">
              <%= f.submit 'Ingresar', class: 'btn btn-primary width-150 height-50' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>

<%= content_for :menu do %>
    <div class="left">
      <div class="header-buttons">

        <div class="dropdown">
          <a href="#confirmation-modal" class="dropdown-inline-button" data-toggle="modal">
            <i class="dropdown-inline-button-icon icmn-file-check"></i>
            Grabar
          </a>
        </div>
      </div>
    </div>
<% end %>

<% content_for :breadcrumbs do %>
    <div class="left">
      <ul class="list-unstyled breadcrumb breadcrumb-custom">
        <li>
          <%= link_to risks_path('gestion') do %>
              Riesgos Operacionales
          <% end %>
        </li>
        <li>
          <%= link_to risk_path(@risk.id) do %>
              <%= @risk.number %>
          <% end %>
        </li>
        <li>
          <span>
            Nueva medici칩n
          </span>
        </li>
      </ul>
    </div>
<% end %>

