<%= render partial: 'risks/new/rule_form', locals: {type_label: 'Norma'} %>

<%= content_for :scripts do %>
    <script>
        $('#rule-in').click(function () {
            $('#table-modal-title').html('Seleccionar Artículo');
            $.ajax({url: '/associables/single_rule-in/Standard'});
        });

        $('#article-in').click(function () {
            var ruleId = $('#rule-in').find('.form-control-hidden').val();

            if (ruleId) {
                $('#table-modal-title').html('Seleccionar Artículo');
                $.ajax({url: '/associables/single_article-in_' + ruleId + '/Rule::Article'});
            }
        });

        $('#responsible-in').click(function () {
            $('#table-modal-title').html('Seleccionar Responsable');
            $.ajax({url: '/associables/single_responsible-in/Person::User'});
        });

    </script>
<% end %>

<%= content_for :breadcrumbs do %>
    <div class="left">
      <ul class="list-unstyled breadcrumb breadcrumb-custom">
        <li>
          <%= link_to risks_path('norma') do %>
              Riesgos Normativos
          <% end %>
        </li>
        <li>
          <span>
            Nuevo
          </span>
        </li>
      </ul>
    </div>
<% end %>