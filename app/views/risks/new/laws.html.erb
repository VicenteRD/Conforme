
<%= render partial: 'risks/new/rule_form', locals: {type_label: 'Ley'} %>

<%= content_for :scripts do %>
    <script>
        $('#rule-in').click(function() {
            setCurrentModalOptions('Rule', 'Ley', false, $(this));
            renderAndShowReferencesModal('law');
        });

        $('#responsible-in').click(function () {
            setCurrentModalOptions('Person::User', 'Responsable', false, $(this));
            renderAndShowReferencesModal();
        });
    </script>
<% end %>

<%= content_for :breadcrumbs do %>
    <div class="left">
      <ul class="list-unstyled breadcrumb breadcrumb-custom">
        <li>
          <%= link_to risks_path('ley') do %>
              Riesgos Legales
          <% end %>
        </li>
        <li>
          <span>
            Nuevo
          </span>
        </li>
      </ul>
    </div>
<% end %>