<% content_for :table_headers do %>
  <tr>
    <th>Header 1</th>
    <th>Header 2</th>
    <th>Header 3</th>
    <th>Header 4</th>
    <th>Header 5</th>
  </tr>
<% end %>

<% content_for :table_body do %>
  <% if @risks.size != 0 %>
    <% @risks.each do |risk| %>
      <tr data-href="<%= risk_path(risk.id.to_s) %>">

        <td><%= Position.find(risk.position_id).name %></td>

        <td><%= risk.process %></td>

        <td><%= risk.activity %></td>

        <td><%= risk.name %>

        <td><%= Person::User.find(risk.responsible_id).name%></td>

      </tr>
    <% end %>
  <% else %>
    <tr>
      <td> No se encontraron riesgos de esta clase. </td>
    </tr>
  <% end %>
<% end %>