<section class="page-content">
  <div class="page-content-inner">
    <!-- Risk -->
    <div class="panel">
        <div class="panel-heading">
          <h3> Detalle de riesgo </h3>
        </div>

        <div class="panel-body">
          <div class="row">
            <%= @risk.process %>
            <%= @risk.activity %>
            <%= yield %>
            <%= Person::User.find(@risk.r_id).name %>
            <%= @risk.measurement_frequency %>
          </div>

          <div class="table-responsive" style="overflow:auto">
            <table class="table table-hover text-right">
              <thead>
                <%= yield :measurements_headers %>
              </thead>
              <tbody>
                <%= yield :measurements_body %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
</section>