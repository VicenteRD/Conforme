<% content_for :before_table do %>
<% end %>

<% content_for :table_name_active do %>
  Activos
<% end %>

<% content_for :table_headers do %>
  <tr>
    <th>√Årea</th>
    <th>Proceso</th>
    <th>Actividad</th>
    <th>Aspecto</th>
    <th>Impacto</th>
    <th>Encargado</th>
    <th>Fecha</th>
    <th>Probabilidad</th>
    <th>Consecuencia</th>
    <th>Magnitud</th>
    <th>Significativo</th>
  </tr>
<% end %>

<!--Info not included:

  * This might be useful, but it's an extra feature

      regulation_info

  * These are extra risk information:

      occurence_time
      operational_situation
      positive
      direct

  * This is information that can be resumed by
    just showing the consequence:

      impact
      geographical_amplitude
      public_perception
      reversibility
      regulation_breach
  -->

<% content_for :table_body do %>
    <% if @risks.size != 0 %>
        <% @risks.each do |risk| %>

            <% sig = humanize_significant(risk.significant) %>
            <% msrmnt = risk.measurements.order_by(measured_at: :asc, created_at: :desc).last %>

            <tr data-href="<%= risk_path(risk.id.to_s) %>">

              <td><%= Position.find(risk.area_id).name %></td>
              <td><%= BusinessProcess.find(risk.process_id).name %></td>
              <td><%= risk.activity %></td>
              <td><%= risk.aspect %></td>
              <td><%= risk.name %></td>

              <td><%= Person::User.find(risk.responsible_id).first_last_name %></td>

              <td><%= msrmnt != nil ? msrmnt.measured_at.strftime(dt_rb_format(false, false)) : '-'%></td>

              <td><%= msrmnt != nil ? (msrmnt.probability * 100).to_i.to_s + '%' : '-'%></td>
              <td><%= msrmnt != nil ? msrmnt.consequence.round(2) : '-'%></td>
              <td><%= msrmnt != nil ? msrmnt.magnitude.round(2) : '-' %></td>

              <td class="<%= 'risk-sig-' + risk.significant.to_s %>"><%= sig %></td>
            </tr>
        <% end %>
    <% else %>
        <tr>
          <td colspan="11"> No se encontraron riesgos de esta clase. </td>
        </tr>
    <% end %>
<% end %>

