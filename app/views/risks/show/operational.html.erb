<% end %>

<%= content_for :scripts do %>

    <div id="comments-modal" class="modal fade modal-size-large" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content" id="comments-modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title" id="confirmation-modal-title">Detalles de la Medición</h4>
          </div>

          <div class="modal-body" id="confirmation-modal-body">
            <div class="margin-left-20">
              <h6>Comentarios</h6>
            </div>
            <div class="margin-left-50" id="comments-modal-comments"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stay away from this, for your own safety and mental health.
         If this has somehow broken, just tell the client it can't be fixed.
      -->

    <% if @risk.measurements.count > 0 %>
      <% date_nums = Set.new %>
      <% data = [] %>
      <% thresholds = [] %>
      <% @risk.measurements.order(measured_at: :asc).each do |m| %>
          <% date = m.measured_at.to_i %>
          <% date_nums.add(date) %>
          <% data.push({x: date, y: m.magnitude}) %>
          <% thresholds.push({x: date, y: m.threshold}) %>
      <% end %>

      <script>

          $('.measurement-row').click(function () {
              // Show measurement's comments along with 'edit' and 'history' button
              $.ajax({url: '/riesgos/detalle/<%= @risk.id%>/' + $(this).attr('data-id')});
          });

          var data = {
            labels: <%= raw date_nums.to_a %>,
            series: [
                <%= raw data.to_s.gsub(':x=>', 'x: ').gsub(':y=>', 'y: ') %>,
                <%= raw thresholds.to_s.gsub(':x=>', 'x: ').gsub(':y=>', 'y: ') %>
            ]
          };

          // xMin, xMax, xTicks, yMax
          $(document).ready(function() {
              chart = new Chartist.Line(
                  '#risk-chart',
                  data,
                  {
                      lineSmooth: false,
                      axisX: {
                          type: Chartist.FixedScaleAxis,
                          ticks: <%= raw date_nums.to_a %>,
                          low: <%= raw date_nums.to_a.first - 4.hours.to_i %>,
                          high: <%= raw date_nums.to_a.last + 4.hours.to_i %>,
                          labelInterpolationFnc: function (value) {
                            return moment(value * 1000).format('<%= dt_form_format(false) %>');
                          }
                      },
                      axisY: {
                          type: Chartist.AutoScaleAxis,
                          low: 0,
                          high: <%= Settings::RiskSettings.first.operational_impact_options.keys.last %>
                      },
                      plugins: [
                          Chartist.plugins.tooltip({
                              tooltipFnc: function (meta, value) {
                                  return value.split(',')[1]
                              }
                          })
                      ]
                  }
              );
          });

      </script>
    <% end %>

    <style>
      .ct-series-a .ct-line,
      .ct-series-a .ct-point {
        stroke: #01a8fe;
      }

      .ct-series-b .ct-line,
      .ct-series-b .ct-point {
        stroke: #fb434a;
      }
    </style>
<% end %>