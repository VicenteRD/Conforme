<%= content_for :scripts do %>
    <%# Process and load measurement data for use in the chart (Using ChartistJS). %>
    <% if @risk.measurements.count > 0 %>
      <% raw_dates = Set.new %>
      <% data = [] %>
      <% thresholds = [] %>
      <% @risk.measurements.order(measured_at: :asc, created_at: :asc).each do |m| %>
          <% date = m.measured_at.to_time.to_i %>
          <% raw_dates.add(date) %>
          <% data.push({x: date, y: m.magnitude}) %>
          <% thresholds.push({x: date, y: m.threshold}) %>
      <% end %>
      <%# For calculations, a Set is needed (so no repeated values are shown), but to use within %>
      <%# Javascript, we use an array. %>
      <% date_nums = raw_dates.to_a %>
      <%# The highest magnitude is that of the highest impact option available, so we use that. %>
      <% highest_y = Settings::RiskSettings.first.operational_options[:impact].keys.last.to_i %>

      <!-- Risks' Show Page Scripts -->
      <script type="text/javascript">
          $('.measurement-row').click(function() {
              // Show measurement's comments along with 'edit' and 'history' button
              $.ajax({url: '/riesgos/detalle/<%= @risk.id%>/' + $(this).attr('data-id')});
          });

          $(document).ready(function() {
              var data = {
                  labels: <%= raw date_nums %>,
                  series: [
                      <%= raw data.to_s.gsub(':x=>', 'x: ').gsub(':y=>', 'y: ') %>,
                      <%= raw thresholds.to_s.gsub(':x=>', 'x: ').gsub(':y=>', 'y: ') %>
                  ]
              };

              var opts = {
                  lineSmooth: false,
                  <%# Ignore the 0s, it's to avoid the JS checker giving errors, as it %>
                  <%# does not consider the Ruby Embedding on the source code%>
                  axisX: generateFixedAxis(
                      0 + <%= raw date_nums.first - 4.hours.to_i %>,
                      0 + <%= raw date_nums.last + 4.hours.to_i %>, <%= raw date_nums %>,
                      function (value) {
                          return moment(value * 1000).format('<%= dt_form_format(false) %>')
                      }),
                  axisY: generateAutoAxis(0, <%= highest_y %>)
              };

              chart = generateLineChart('#risk-chart', data, opts);
          });
      </script>
    <% end %>
<% end %>

<% content_for :styles do %>
    <!-- Risks' Show Page Styles -->
    <style>
    .ct-series-a .ct-line,
    .ct-series-a .ct-point {
      stroke: #01a8fe;
