<div class="row">
  <div class="table-responsive margin-bottom-30" style="height:300px; overflow:auto">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Nombre</th>
        <th style="width: 70%">Descripci√≥n</th>
      </tr>
      </thead>
      <tbody>
        <% if BusinessProcess.count > 0 %>
          <% BusinessProcess.each do |business_process| %>
            <tr class="bProcessRow" data-name="<%= business_process.name %>">
              <td><%= business_process.name %></td>
              <td><%= business_process.description %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td>No se encontraron procesos</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  $('.bProcessRow').click(function () {
      $('#process-picker').find('.form-control').val($(this).attr('data-name'));
      $('#table-modal').modal('hide')
  });
</script>